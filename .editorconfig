# Indicates that this configuration applies to the root directory and its subdirectories
root = true

# Default settings for all files
[*]
charset = utf-8                   # Character encoding set to UTF-8
end_of_line = lf                  # Line ending style set to LF (Unix-style)
insert_final_newline = true       # Ensure a newline is added at the end of each file
trim_trailing_whitespace = true   # Remove trailing whitespace at the end of lines

# Settings for specific file types: Python, reStructuredText, and INI files
[*.{py,rst,ini}]
indent_style = space               # Indentation style set to tabs
indent_size = 4                    # Indentation size set to 4 spaces

# Settings for specific file types: HTML, CSS, SCSS, JSON, YAML, XML, JavaScript
[*.{html,css,scss,json,yml,xml,js}]
indent_style = space               # Indentation style set to tabs
indent_size = 4                    # Indentation size set to 4 spaces

# Settings for Markdown files
[*.md]
trim_trailing_whitespace = false # Do not remove trailing whitespace in Markdown files

# Settings for Makefile
[Makefile]
indent_style = space               # Indentation style set to tabs

# Settings for default configuration files
[default.conf]
indent_style = space               # Indentation style set to tabs
indent_size = 4                    # Indentation size set to 4 spaces
